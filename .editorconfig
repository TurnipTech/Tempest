root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
max_line_length = 120

# Compose-specific rules
# Allow Composable functions to use PascalCase
ktlint_function_naming_ignore_when_annotated_with = Composable

# Better formatting for Compose code
ktlint_function_signature_rule_force_multiline_when_parameter_count_greater_or_equal_than = 4
ktlint_chain_method_rule_force_multiline_when_chain_operator_count_greater_or_equal_than = 4

# Compose rule configuration
compose_check_modifiers_for_visibility = only_public

[*.{xml,html}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.gradle]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
